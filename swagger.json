        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginWithGoogleResponse"
                }
              }
            }
          },
          "202": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginWithGoogleAcceptedResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)"
          },
          "401": {
            "description": "Invalid Google token"
          }
        }
      }
    },
    "/auth/apple": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login user with Apple",
