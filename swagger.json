      "RegisterChildWithEmail": {
        "type": "object",
        "required": ["method", "email", "password", "role", "name", "phone", "country", "city", "birthday", "file"],
        "properties": {
          "method": {
              "type": "string",
              "enum": ["email"],
              "description": "Registration method: email"
          },
          "email": {
            "type": "string",
            "description": "User email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 24,
            "pattern": "^[a-zA-Z0-9]{8,24}$",
            "description": "User password",
            "example": "Qw52eRty37"
          },
          "role": {
            "type": "string",
            "enum": ["child"],
            "description": "User role"
          },
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 55,
            "description": "User name",
            "example": "Катерина Морська"
          },
          "phone": {
            "type": "string",
            "pattern": "^\\+?\\d{1,4}?[-.\\s]?(\\(?\\d{1,4}\\)?[-.\\s]?)?\\d{1,4}[-.\\s]?\\d{1,4}[-.\\s]?\\d{1,9}$",
            "description": "User's phone",
            "example": "+380123456789"
          },
          "country": {
            "type": "string",
            "pattern": "^[A-Z]{2}$",
            "description": "User's country code. Must be an ISO 3166-1 alpha-2 code.",
            "example": "UA"
          },
          "city": {
            "type": "string",
            "pattern": "^[a-zA-Zа-яА-ЯґҐєЄіІїЇ'’\\s-]{2,50}$",
            "description": "User's city",
            "example": "Київ"
          },
          "birthday": {
            "type": "string",
            "format": "date-time",
            "description": "User's date of birth in ISO 8601 format",
            "example": "2010-01-19T22:00:00Z"
          },
          "file": {
            "type": "string",
            "format": "binary",
            "description": "User avatar file being uploaded (maximum size: 8 MB)"
          }
        }
      },
